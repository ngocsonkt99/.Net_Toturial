@model Bai2.Models.GuestResponse

@{
    ViewBag.Title = "RvspForm";
}
<style>
        p#er {
            color: #ff0000;
        }
</style>
<h2>RvspForm</h2>

<div>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)

        <p>Your Name: @Html.TextBoxFor(m => m.Name) </p>
        <p id="er"> @Html.ValidationMessageFor(m => m.Name)</p>

        <p>Your Email: @Html.TextBoxFor(m => m.Email) </p>
        <p id="er"> @Html.ValidationMessageFor(m => m.Email)</p>

        <p>Your Phone: @Html.TextBoxFor(m => m.Phone) </p>
        <p id="er"> @Html.ValidationMessageFor(m => m.Phone)</p>
        
        <p>
            Will you attend ? @Html.DropDownListFor(m => m.WillAttend, new[]
                         {
                             new SelectListItem () {Text="Yes, I'll be there",
            Value = bool.TrueString},
                             new SelectListItem () {Text="No, I'll not be there",
            Value = bool.FalseString} }, "Choose an option")
        </p>
        <p id="er"> @Html.ValidationMessageFor(m=> m.WillAttend)</p>

        <input type="submit" value="Submit RSVP" />

    }
</div>